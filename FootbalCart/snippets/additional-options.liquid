<div class="grid grid-cols-12 items-center mt-24 sm:mt-36 gap-4">
  <div class="w-full h-full flex flex-col justify-center col-span-12 lg:col-span-5">
    <div class="w-full text-center sm:text-start lg:hidden">
      <h1 class="text-3xl sm:text-5xl lg:text-6xl uppercase">{{ product.title }}</h1>
      <p class="font-light sm:w-2/3">{{ product.description }}</p>
    </div>
    <div class="flex justify-center mt-4 lg:mt-0">
      <img
        src="{{ product.featured_image | img_url: 'large' }}"
        alt="{{product.featured_image.alt}}"
        class="h-125 object-fit"
        id="generated_image_preview">
    </div>
  </div>
  <div class="flex flex-col col-span-12 lg:col-span-7">
    <div class="w-full text-center sm:text-start hidden lg:block">
      <h1 class="text-3xl sm:text-5xl lg:text-6xl uppercase">{{ product.title }}</h1>
      <p class="font-light sm:w-2/3">{{ product.description }}</p>
    </div>
    <div class="flex flex-col bg-blue-custom rounded-lg mt-8 p-6 gap-y-8 w-full">
      {% for product in collections.additional-options.products %}
        {% for variant in product.variants %}
          <div class="grid grid-cols-12">
            <div class="flex justify-start items-center col-span-8 gap-x-4">
              <div class="bg-gray-300 rounded-full">
                <img
                  src="{{product.featured_image | img_url: 'large'}}"
                  alt="{{product.featured_image.alt}}"
                  class="object-fit max-h-20 rounded-full">
              </div>
              <div class="mr-4">
                <p class="text-lg md:text-2xl font-medium">{{ product.title }}</p>
                <p class="text-xs md:text-base break-all opacity-50">{{ product.description }}</p>
              </div>
            </div>
            <div class="col-span-4 flex justify-end items-center">
              <div class="flex gap-x-4">
                <div>
                  <p class="opacity-75 font-light text-lg">
                    {{ product.price | money }}
                  </p>
                </div>
                <div>
                  <label class="checkbox__container flex items-center">
                    <div>
                      <input
                        type="checkbox"
                        variant="{{ variant.id }}"
                        class="additional-product-options"
                        required>
                      <span class="checkmark"></span>
                    </div>
                  </div>
                </label>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    <div>
      <button
        type="submit"
        class="bg-blue__gradient text-white w-full rounded-full mt-6  py-2 hover:opacity-75 transition-opacity duration-300 flex justify-center gap-x-4"
        onclick="saveCanvas()">
        <p>
          {{ section.settings.submit_button }}
        </p>
        <p>
          {% render 'icon-arrow-right-rounded' %}
        </p>
      </button>
    </div>
  </div>
</div>
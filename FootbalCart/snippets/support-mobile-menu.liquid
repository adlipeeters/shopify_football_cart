    <li>
      <div class="flex items-center toggle__filter" id="general_information">
        <div class="text-white rounded-full p-2">
          {% render 'icon-support-general-information' %}
        </div>
        <div class="ml-4 w-full mr-3">
          <h3 class="">
            <span class="italic">{{ section.settings.support_title_1 }}</span>
          </h3>
        </div>
      </div>
      <div class="answer py-4 ml-16 ">
        {% for article in blog.articles %}
          {% if article.tags contains 'general_information' %}
            <a
              href="{{article.url}}"
              data-href="general_information"
              class="mt-2 transition duration-300 ease-in-out hover:opacity-70 info-link {% if current_article == article.handle %}opacity-70 underline underline-offset-4 decoration-white active__tab{%endif%}">

<style>
  @keyframes slideInFromLeft {
    0% {
      transform: scale(0.9);
    }
    100% {
      transform: scale(1.2);
    }
  }

  .slider {
    cursor: grab;
  }
  .slider .slick-slide {
    margin: 20px;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
    transform: scale(0.9);
  }

  .slider .slick-center::before {
    transition: 0.35s;
  }
  .slider .slick-center {
    animation: 0.5s ease-out 0s 1 slideInFromLeft;
  }
  .slider .slick-center {
    transform: scale(1.2);
  }

  .slider .center-slider .slick-slide {
    transition: all 1s ease-in-out;
  }

  .slider .slick-list {
    padding-bottom: 50px !important;
  }

  #slider__wrapper {
    background: #242E3A;
    box-shadow: inset 5px 5px 50px rgba(0, 0, 0, 0.25);
  }
  #slider__wrapper .carousel__arrow-back,
  #slider__wrapper .carousel__arrow-next {
    color: #fff;
    opacity: 0.5;
    transition: 0.35s;
  }


  #slider__wrapper .carousel__arrow-back:hover,
  #slider__wrapper .carousel__arrow-next:hover {
    opacity: 1;
  }

  .slider .slick-dots li button:before {
    background-color: transparent;
    border: 2px solid rgb(129, 129, 129);
    height: 10px;
    width: 10px;
    border-radius: 50px;
    text-indent: -9999px;
    overflow: hidden;
    margin-top: 32.5px;
  }

  .slider .slick-dots li.slick-active button:before {
    background: linear-gradient(222.29deg, #437FD8 -10.81%, #0D2E84 138.98%);
    box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 23px;
    border: 2px solid rgb(129, 129, 129);
    text-indent: -9999px;
    overflow: hidden;
    margin: 32.5px 5px 0;
  }
  @media only screen and (max-width: 640px) {
    .slider .carousel__arrow-back,
    .slider .carousel__arrow-next {
      display: none;
    }
  }
</style>


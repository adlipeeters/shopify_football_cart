<script type="text/javascript">
  $(document).ready(function() {
  $('.slider').slick({
     dots: true,
     centerMode: true,
     centerPadding: '60px',
     slidesToShow: 5,
     speed: 250,
     autoplay: true,
     autoplaySpeed: 2000,
     infinite: true,
     prevArrow: $(".carousel__arrow-back"),
     nextArrow: $(".carousel__arrow-next"),
     cssEase: 'linear',
     responsive: [
       {
         breakpoint: 1280,
         settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 3
         }
       }, {
         breakpoint: 1024,
         settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 3
         }
       }, {
         breakpoint: 768,
         settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 3
         }
       }, {
         breakpoint: 480,
         settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 1
         }
       }
     ]
   });
               
    $('.slider').on('wheel', (function(e) {
     e.preventDefault();
       if (e.originalEvent.deltaY < 0) {
         $(this).slick('slickNext');
       } else {
         $(this).slick('slickPrev');
       }
    }));
   })</script>
<script type="text/javascript">
  $(document).ready(function() {
  $('.gift_slider').slick({
                dots: true,
                  centerMode: false,
                  centerPadding: '60px',
                  slidesToShow: 1,
                  slidesToScroll: 1,
                  speed: 550,
                  autoplay: false,
                  autoplaySpeed: 2000,
                  infinite: true,
                  prevArrow: $(".carousel__arrow-back"),
                  nextArrow: $(".carousel__arrow-next"),
                  cssEase: 'linear',
                   responsive: [
                 {
                   breakpoint: 1280,
                   settings: {
                     arrows: false,
                     centerMode: false,
                   }
                 },]
                  });
                                               
                 $('.gift_slider').on('wheel', (function(e) {
                  e.preventDefault();
                    if (e.originalEvent.deltaY < 0) {
                      $(this).slick('slickNext');
                    } else {
                      $(this).slick('slickPrev');
                    }
                 }));
                })
                                         </script>
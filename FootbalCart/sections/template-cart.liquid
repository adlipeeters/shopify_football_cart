<style>
  #your-shopping-cart {
    background-image: linear-gradient(180deg, #0F1521 0%, rgba(15, 21, 33, 0) 100%);
    width: 100%;
    height: auto;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: center !important;
  }
</style>

<div class="flex justify-center">
  <div class="container">
    <div class="flex flex-col mt-24 sm:mt-36">
      <div class="w-full text-center sm:text-start">
        <h1 class="text-3xl sm:text-5xl lg:text-6xl uppercase text-center md:text-left">{{ section.settings.title }}</h1>
      </div>
      <div class="hidden md:block">
        {% render 'cart-desktop' %}
      </div>
      <div class="px-10 xxs:px-16 sm:px-36 md:hidden">
        {% render 'cart-mobile' %}
      </div>
    </div>
  </div>
</div>

<div class="px-10 xxs:px-16 sm:px-36 md:px-0">
  {% render 'additional-options-cart' %}
</div>
{% schema %}
  {
    "name": "Template Cart",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Your cart",
        "label": "Title"
      }, {
        "type": "text",
        "id": "additional_options",
        "default": "Additional options",
        "label": "Additional options"
      }
    ],
    "blocks": [
      {
        "type": "subtotal",
        "name": "Subtotal",
        "limit": 1
      }, {
        "type": "update_button",
        "name": "Update Button",
        "limit": 1
      }, {
        "type": "checkout_button",
        "name": "Checkout Button",
        "limit": 1
      }
    ]
  }
{% endschema %}

<script>
  function changeQuantity(type, id) {
    console.log(type, id)
    if (type == 'increment') {
      $('#updates_' + id)
        .val(Number($('#updates_' + id).val()) + 1)
        $('#updates_mobile_' + id)
        .val(Number($('#updates_mobile_' + id).val()) + 1)
        $('#quantity_item_' + id)
        .html($('#updates_' + id).val())
        $('#quantity_item_mobile_' + id)
        .html($('#updates_mobile_' + id).val())
    } else {
      $('#updates_' + id)
        .val(Number($('#updates_' + id).val()) - 1)
        $('#updates_mobile_' + id)
        .val(Number($('#updates_mobile_' + id).val()) - 1)
        $('#quantity_item_' + id)
        .html($('#updates_' + id).val())
        $('#quantity_item_mobile_' + id)
        .html($('#updates_mobile_' + id).val())
    }
  }

  function addToCart(variantId) {
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(
        {id: variantId, quantity: 1}
      )
    }).then(response => response.json()).then(data => {
      console.log('Success!', data);
      window.location.reload();

// You can add a success message here
    }).catch(error => {
      console.error('Error:', error);

// You can add an error message here
    });
  }
</script>
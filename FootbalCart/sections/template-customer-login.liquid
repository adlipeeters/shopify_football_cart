<style>
  .customer_login_account__page-background {
    {% comment %} background-image: linear-gradient(180deg, #0F1521 0%, rgba(15, 21, 33, 0.479167) 43.96%, #303741 100%), url('{{ 'login_bg.png' | asset_url }}'); {% endcomment %}
    background-image: linear-gradient(180deg, #0F1521 0%, rgba(15, 21, 33, 0.479167) 43.96%, #303741 100%), url('{{ 'login-background.png' | asset_url }}');
    width: 100%;
    height: auto;
    height: 100vh;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: center !important;
  }
</style>
<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 mt-28" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <p class="text-center text-3xl font-normal mt-6">{{ section.settings.login_text }}</p>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="email_address" class="sr-only">{{ section.settings.email_label }}</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="off"
            class="w-full bg-transparent rounded-md text-white px-3 py-2 border placeholder:text-white placeholder:opacity-75 duration-300 hover:opacity-75"
            placeholder="{{ section.settings.email_label }}">
        </div>

        {% if form.password_needed %}
          <div class="my-4">
            <label for="password" class="sr-only">
              {{ section.settings.password_label }}</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="off"
              class="w-full bg-transparent rounded-md text-white px-3 py-2 border placeholder:text-white placeholder:opacity-75 duration-300 hover:opacity-75"
              placeholder="{{ section.settings.password_label }}">
          </div>
        {% endif %}

        <div class="my-2 text-sm flex justify-between">
          <a
            x-on:click="loginForm = false; pwRecoverForm = true"
            href="#"
            class="duration-300 hover:opacity-75">
            <p>
              {{ section.settings.forgot_password_text }}
            </p>
          </a>
          <a href="{{ shop.url }}/account/register" class="duration-300 hover:opacity-75">
            <p>
              {{ section.settings.register_link }}
            </p>
          </a>
        </div>
        <div class="flex justify-center items-center my-4">
          <button type="submit" class="py-2 text-sm text-white bg-blue__gradient w-7/12 rounded-full duration-300 hover:opacity-75">
            {{ section.settings.login_btn_text }}
          </button>
        </div>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12">
      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">
          {{ section.settings.continue_as_guest }}
        </h1>
      </div>

      {% form 'guest_login' %}
        <div>
          <button type="submit" class="py-2 text-sm text-white bg-blue__gradient w-7/12 rounded-full duration-300 hover:opacity-75">
            {{ section.settings.continue_as_guest }}
          </button>
        </div>
      {% endform %}
    {% endif %}
  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">{{ section.settings.recover_password }}</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email" class="sr-only">{{ section.settings.email_label }}</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="w-full bg-transparent rounded-md text-white px-3 py-2 border placeholder:text-white placeholder:opacity-75 duration-300 hover:opacity-75"
            placeholder="{{ section.settings.email_label }}">
        </div>
        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = true; pwRecoverForm = false"
            href="#"
            class="duration-300 hover:opacity-75">
            <p>
              {{ section.settings.back_to_login }}</a>
          </p>
        </div>
        <div class="flex justify-center items-center my-8">
          <button type="submit" class="py-2 text-sm text-white bg-blue__gradient w-7/12 rounded-full duration-300 hover:opacity-75 mt-2">
            {{ section.settings.recover_password }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Customer login",
    "settings": [
      {
        "type": "text",
        "id": "login_text",
        "default": "Log in",
        "label": "Login title"
      },
      {
        "type": "text",
        "id": "login_btn_text",
        "default": "Sign in",
        "label": "Login button text"
      },
      {
        "type": "text",
        "id": "forgot_password_text",
        "default": "Forgot your password?",
        "label": "Forgot your password text"
      },
      {
        "type": "text",
        "id": "email_label",
        "default": "Email address",
        "label": "Email label"
      }, {
        "type": "text",
        "id": "password_label",
        "default": "Password",
        "label": "Password label"
      }, {
        "type": "text",
        "id": "continue_as_guest",
        "default": "Continue",
        "label": "Continue as a guest"

      }, {
        "type": "text",
        "id": "back_to_login",
        "default": "Back to login",
        "label": "Back to login text"
      }, {
        "type": "text",
        "id": "recover_password",
        "default": "Recover your password",
        "label": "Recover password"
      }, {
        "type": "text",
        "id": "register_link",
        "default": "Don't have an account?",
        "label": "Register title"
      }
    ]
  }
{% endschema %}